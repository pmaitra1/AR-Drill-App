<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4FAFC">


    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AR Drill Selector"
        android:textSize="24sp"
        android:textColor="#0B3C49"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif-medium" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="24dp"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:elevation="8dp"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Your Drill"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#134E4A"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp" />

        <ImageView
            android:id="@+id/drillImage"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/drill_placeholder"
            android:layout_marginBottom="16dp"
            android:background="@drawable/image_border"
            android:padding="4dp"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/drillSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:popupBackground="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="20dp"/>


        <TextView
            android:id="@+id/drillDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description: "
            android:textColor="#1B1F22"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/drillTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tips: "
            android:textColor="#3F3F3F"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="24dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/startARButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start AR Drill"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:fontFamily="sans-serif-medium"
            android:backgroundTint="#0B7A75"
            android:textColor="@android:color/white"
            android:elevation="4dp"
            android:paddingVertical="12dp"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>
